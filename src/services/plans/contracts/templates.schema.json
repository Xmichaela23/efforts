{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["templates"],
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "poolId", "variant", "phase", "baseDurationMin"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "poolId": { "type": "string", "minLength": 1 },
          "variant": { "type": "string", "enum": ["A", "B", "C"] },
          "phase": { "type": "string", "enum": ["base", "build", "peak", "taper"] },
          "baseDurationMin": { "type": "number", "minimum": 1 },
          "progressionRule": { "type": "string" },
          "constraints": { "type": "array", "items": { "type": "string" } },
          "userNote": { "type": "string" },
          "track": { "type": "string", "enum": ["power", "endurance", "hybrid" ] },
          "tierOrder": { "type": "number", "minimum": 1 },
          "requires": { "type": "array", "items": { "type": "string" } },
          "fallback": { "type": "boolean" }
        }
      }
    }
  }
}



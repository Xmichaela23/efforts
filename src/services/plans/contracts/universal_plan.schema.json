{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://efforts.app/schemas/universal_plan.schema.json",
  "title": "Universal Training Plan",
  "type": "object",
  "required": ["name", "duration_weeks", "sessions_by_week"],
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "duration_weeks": { "type": "integer", "minimum": 1 },
    "plan_type": { "type": "string" },
    "swim_unit": { "type": "string", "enum": ["yd","m"] },
    "ui_text": {
      "type": "object",
      "properties": {
        "optional_header": { "type": "string" },
        "opt_kind_copy": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "defaults": { "type": "object", "additionalProperties": true },
    "sessions_by_week": {
      "type": "object",
      "propertyNames": { "pattern": "^[1-9][0-9]*$" },
      "additionalProperties": {
        "type": "array",
        "items": { "$ref": "#/definitions/session" }
      }
    },
    "notes_by_week": {
      "type": "object",
      "propertyNames": { "pattern": "^[1-9][0-9]*$" },
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "export_hints": {
      "type": "object",
      "properties": {
        "pace_tolerance_quality": { "type": "number", "minimum": 0, "maximum": 0.25, "default": 0.04 },
        "pace_tolerance_easy":     { "type": "number", "minimum": 0, "maximum": 0.25, "default": 0.06 },
        "power_tolerance_SS_thr":  { "type": "number", "minimum": 0, "maximum": 0.25, "default": 0.05 },
        "power_tolerance_VO2":     { "type": "number", "minimum": 0, "maximum": 0.25, "default": 0.10 }
      },
      "required": [],
      "additionalProperties": false
    }
  },
  "definitions": {
    "session": {
      "type": "object",
      "additionalProperties": false,
      "required": ["day"],
      "properties": {
        "day": { "type": "string", "enum": ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"] },
        "discipline": { "type": "string", "enum": ["run","bike","ride","swim","strength","brick","walk"] },
        "type": { "type": "string" },
        "duration": { "type": "number", "minimum": 0 },
        "intensity": { "type": ["string","object"] },
        "description": { "type": "string" },
        "main": { "type": "string" },
        "extra": { "type": "string" },
        "override_wu": { "type": "string" },
        "override_cd": { "type": "string" },
        "macro": { "type": "string" },
        "intervals": {
          "type": "array",
          "items": { "type": ["string","object"] }
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "steps_preset": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "distance": { "type": "number", "minimum": 0 },
                  "unit": { "type": "string", "enum": ["yd","m"] },
                  "effort": { "type": "string" },
                  "stroke": { "type": "string" },
                  "rest": { "type": "string" },
                  "repeat": { "type": "integer", "minimum": 1 },
                  "equipment": { "type": "array", "items": { "type": "string" } },
                  "note": { "type": "string" }
                }
              },
              {
                "type": "object",
                "additionalProperties": false,
                "required": ["type"],
                "properties": {
                  "type": { "type": "string", "enum": ["strength","rest"] },
                  "exercise": { "type": "string" },
                  "reps": { "type": "integer", "minimum": 1 },
                  "target_weight": { "type": "number", "minimum": 0 },
                  "target_percent_1rm": { "type": "number", "minimum": 0, "maximum": 2 },
                  "duration": { "type": "string" },
                  "note": { "type": "string" },
                  "repeat": { "type": "integer", "minimum": 1 }
                }
              }
            ]
          }
        },
        "strength_exercises": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name","sets"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "sets": { "type": "integer", "minimum": 1 },
              "reps": { "type": "integer", "minimum": 1 },
              "weight": { "type": "number", "minimum": 0 }
            }
          }
        }
      }
    }
  }
}


